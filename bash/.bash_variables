# terminal name
export PS1=''
export PS1=$PS1'\[\e[01;30m\]\t`if [ $? = 0 ]; then echo "\[\e[32m\] ✔ "; else echo "\[\e[31m\] ✘ "; fi`\[\e[01;34m\]\w\[\e[00m\] `[[ $(git status 2> /dev/null | head -n5 | tail -n1) == "nothing to commit, working tree clean" ]] && echo "\[\e[01;32m\]"$(__git_ps1 "(%s)") || echo "\[\e[01;31m\]"$(__git_ps1 "(%s)")` \[\e[00m\]::'

# jason
export HEALPIX=$HOME/Healpix_3.50
export CFITSIO=/usr
export FFTW=/usr/local
export LD_LIBRARY_PATH=$HOME/Healpix_3.50/lib:$LD_LIBRARY_PATH
export SSHT=$HOME/project/src/ssht
export SO3=$HOME/project/src/so3
export S2LET=$HOME/project/src/s2let

# sharkdp/fd for junegunn/fzf
export FZF_DEFAULT_COMMAND='fd --type file --follow --exclude .git --color=always'
export FZF_CTRL_T_COMMAND='$FZF_DEFAULT_COMMAND'
export FZF_DEFAULT_OPTS='--ansi'

# detect operating system
################### DARWIN  ###################
if [[ $(uname -s) == Darwin ]]; then
    # matlab
    export PATH=$PATH:/Applications/MATLAB_R2019a.app/bin

	# remove clang
	export CC=/usr/local/bin/gcc-8
	export CXX=/usr/local/bin/g++-8

	# allows Coreutils package to be used without 'g' prefix before each command.
	export PATH=/usr/local/opt/coreutils/libexec/gnubin:$PATH
	export MANPATH=/usr/local/opt/coreutils/libexec/gnuman:$MANPATH

    # binutils
    export PATH="/usr/local/opt/binutils/bin:$PATH"
    export LDFLAGS="-L/usr/local/opt/binutils/lib"
    export CPPFLAGS="-I/usr/local/opt/binutils/include"

	# tar
	export PATH=/usr/local/opt/gnu-tar/libexec/gnubin:$PATH
	export MANPATH=/usr/local/opt/gnu-tar/libexec/gnuman:$MANPATH

    # latex
    export PATH=/Library/TeX/texbin:$PATH
fi

[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*
